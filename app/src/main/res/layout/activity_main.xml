<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"/>

    <Button
        style="@style/button"
        android:text="Spotify Streamer"
        android:id="@+id/spotify"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal" />

    <Button
        style="@style/button"
        android:text="Scores App"
        android:id="@+id/scores"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <Button
        style="@style/button"
        android:text="Library App"
        android:id="@+id/library"
        android:layout_marginTop="8dp"

        android:layout_gravity="center_horizontal" />

    <Button
        style="@style/button"
        android:text="Build It Bigger"
        android:id="@+id/bigger"
        android:layout_marginTop="8dp"

        android:layout_gravity="center_horizontal" />

    <Button
        style="@style/button"
        android:text="XYZ Reader"
        android:id="@+id/reader"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <Button
        style="@style/button"
        android:layout_marginTop="8dp"

        android:text="Capstone: My Own App"
        android:id="@+id/capstone"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
